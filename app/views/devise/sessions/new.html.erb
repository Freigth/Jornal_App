<h2 class='light-blue'>Welcome back</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-5 form-group"}, data: { turbo: false }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :email, class:'white' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control mb-2 bg-dark text-light'%>
  </div>

  <div class="field">
    <%= f.label :password, class:'white' %>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control bg-dark text-light' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary btn-block my-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
