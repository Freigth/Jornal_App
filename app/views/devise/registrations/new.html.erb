<h2 class='white'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-5 form-group"}) do |f| %>

  <%= render 'devise/shared/error_messages_edited' %>

  <div class="field">
    <%= f.label :email, class:'white' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control mb-2 bg-dark text-light' %>
  </div>

  <div class="field">
    <%= f.label :password, class:'white' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control mb-2 bg-dark text-light' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:'white' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-2 bg-dark text-light' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary my-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
