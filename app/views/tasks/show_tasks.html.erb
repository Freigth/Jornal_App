<% if @show_task.count === 0 %>
    <h2 class='white'>No Overdue Tasks</h2>
<% else %>
    <% @show_task.each do |task| %>
        <div class='container-fluid'>
            <div class='row border-bottom border-5 border-danger p-3'>
                <h5 class='white'><span class='light-blue'>Task name:</span> <%= task.name %></h5>
                <h5 class='white'><span class='light-blue'>Task description:</span> <%= task.description %></h5>
                <h5 class='white'><span class='light-blue'>Task deadline:</span> <%= task.deadline.time.strftime('%I:%M %p') %> on <%= task.deadline.strftime('%A') %>, <%= task.deadline.strftime('%B') %> <%= task.deadline.day %>, <%= task.deadline.year %></h5>
                <% name = task.category.to_json %>
                <% parsed = JSON(name) %>
                <h5 class='white'><span class='light-blue'>Category name:</span> <%= parsed['name'] %></h5>
            </div>
        </div>
    <% end %>
<% end %>