<!DOCTYPE html>
<html>
  <head>
    <title>Journal App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('favicon_io/apple-touch-icon.png'), sizes: "100x100" %>
    <%= favicon_link_tag asset_path('favicon_io/favicon-32x32.png'), sizes: "32x32" %>
    <%= favicon_link_tag asset_path('favicon_io/favicon-16x16.png'), sizes: "16x16" %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800;900&family=Merriweather:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
 
  </head>

  <body>

    <% if user_signed_in? %>
      <section class='container-fluid border-5 border-bottom border-dark'>
          <%= render "categories/header" %>
      </section>
      
       <% if notice %>
        <div class="alert alert-secondary fade show" role="alert">
          <strong>Notice:</strong> <%= notice %>
          </button>
        </div>  
       <% elsif alert %>
        <div class="alert alert-warning" role="alert">
          <strong>Alert!</strong> <%= alert %>
        </div>
      <% elsif flash[:error] %>
       <div class="alert alert-warning" role="alert">
          <strong>Alert!</strong> <%= flash[:error] %>
        </div>
      <% end %>

      <section class='container mt-4'>
          <%= yield %>
      </section>

    <% else %>
      <div class='container-fluid'>
        <div class='row vh-100'>
          <section class='col-6 bg-primary'>
            <div class='m-5 p-5'>
              <%= render "categories/greetings"%>
            </div>
          </section>

          <section class='col-6 bg-secondary'>
            <div class='m-5 p-5'>
              <%= yield %>
            </div>
          </section>
        </div>
      </div>
    <% end %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    
  </body>
</html>
